<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/ElementoCelda"
    android:padding="5dp"
    android:background="#4334ff"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="18/8/14"
        android:id="@+id/labelFecha"
        android:layout_marginRight="5dp"
        android:textSize="14sp"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="18:00"
        android:id="@+id/labelHora"
        android:layout_marginRight="5dp"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="LA NARANJA MECANICA B"
        android:id="@+id/labelRival"
        android:layout_marginRight="5dp"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_weight="9"
        android:gravity="center_horizontal" />

    <requestFocus
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="JUAN DE LA CIERVA"
        android:textSize="14sp"
        android:id="@+id/labelEstadio"
        android:textColor="@color/white"
        android:layout_weight="6"
        android:layout_marginRight="5dp"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="N/A"
        android:textSize="14sp"
        android:id="@+id/labelResultado"
        android:textColor="@color/white"
        android:layout_weight="3"
        android:gravity="right" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewEmpty"
        android:minLines="3" />


</LinearLayout>
